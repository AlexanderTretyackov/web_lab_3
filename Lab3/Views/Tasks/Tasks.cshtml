@model TModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Список задач</h2>
<table>
    <tr>
        <th>Название описание</th>
        <th>Дата</th>
        <th>Источник</th>
        <th></th>
    </tr>

    @foreach (var item in Model.Records)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>

                <span>@item.Date.ToString("f", new CultureInfo("ru"))</span>
                @*@Html.DisplayFor(modelItem => item.Date.ToLocalTime())*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SystemName)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "EditRecord", new {recordId = item.Id}) |
                @Html.ActionLink("Удалить", "DeleteRecord", new {recordId = item.Id})
            </td>
        </tr>
    }
</table>